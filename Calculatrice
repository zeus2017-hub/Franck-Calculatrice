
<!DOCTYPE html>
<html>
<head>
  <title>Calculatrice simple</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="calculatrice">
    <input type="text" id="affichage" disabled>
    <div class="boutons">
      <button id="bouton-7">7</button>
      <button id="bouton-8">8</button>
      <button id="bouton-9">9</button>
      <button id="bouton-division">/</button>
      <button id="bouton-4">4</button>
      <button id="bouton-5">5</button>
      <button id="bouton-6">6</button>
      <button id="bouton-multiplication">*</button>
      <button id="bouton-1">1</button>
      <button id="bouton-2">2</button>
      <button id="bouton-3">3</button>
      <button id="bouton-soustraction">-</button>
      <button id="bouton-0">0</button>
      <button id="bouton-virgule">.</button>
      <button id="bouton-egalite">=</button>
      <button id="bouton-addition">+</button>
    </div>
  </div>

 
<style>
.calculatrice {
  width: 200px;
  margin: 20px auto;
  padding: 20px;
  background-color: #f0f0f0;
  border: 1px solid #ccc;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#affichage {
  width: 100%;
  height: 40px;
  font-size: 24px;
  text-align: right;
  padding: 10px;
  border: none;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.boutons {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.boutons button {
  width: 40px;
  height: 40px;
  font-size: 18px;
  margin: 5px;
  border: none;
  border-radius: 10px;
  background-color: #fff;
  cursor: pointer;
}

.boutons button:hover {
  background-color: #ccc;
}</style>


<script>

const affichage = document.getElementById('affichage');
const boutons = document.querySelectorAll('.boutons button');

let valeurActuelle = '';
let valeurPrecedente = '';
let operateur = '';

boutons.forEach(bouton => {
  bouton.addEventListener('click', () => {
    const valeurBouton = bouton.textContent;

    if (valeurBouton === '=') {
      calculer();
    } else if (valeurBouton === '+' || valeurBouton === '-' || valeurBouton === '*' || valeurBouton === '/') {
      operateur = valeurBouton;
      valeurPrecedente = valeurActuelle;
      valeurActuelle = '';
    } else {
      valeurActuelle += valeurBouton;
      affichage.value = valeurActuelle;
    }
  });
});

function calculer() {
  let resultat;

  switch (operateur) {
    case '+':
      resultat = parseFloat(valeurPrecedente) + parseFloat(valeurActuelle);
      break;
    case '-':
      resultat = parseFloat(valeurPrecedente) - parseFloat(valeurActuelle);
      break;
    case '*':
      resultat = parseFloat(valeurPrecedente) * parseFloat(valeurActuelle);
      break;
    case '/':
      resultat = parseFloat(valeurPrecedente) / parseFloat(valeurActuelle);
      break;
    default:
      resultat = valeurActuelle;
  }

  affichage.value = resultat.toString();
}
</script>
  </body>
</html>
